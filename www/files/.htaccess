# .htaccess pro hosting Wedos

# Zákaz výpisu složek (bezpečnost)
Options -Indexes

# Povolení mod_rewrite pro hezké URL
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Přesměrování na HTTPS
    # RewriteCond %{HTTPS} off
    # RewriteRule (.*) https://%{HTTP_HOST}/$1 [R=301,L]
    
    # Bezpečnostní hlavička
    # <IfModule mod_headers.c>
    #     Header set Content-Security-Policy "upgrade-insecure-requests;"
    # </IfModule>

    # Povolení .well-known
    RewriteRule ^\.well-known/.* - [L]

    # Blokace skrytých souborů a WordPress cest
    RewriteRule (^|/)\.(?!well-known) - [F]
    RewriteRule ^wp-(login|admin|includes|content) - [F]

    # Povolit statické soubory, pokud existují
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule \.(pdf|js|mjs|ico|gif|jpg|jpeg|png|webp|avif|svg|css|rar|zip|7z|tar\.gz|map|eot|ttf|otf|woff|woff2)$ - [L]

    # Přesměrování na index.php, pokud soubor/složka neexistuje
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . index.php [L]
</IfModule>

# Gzip komprese pro textové typy
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json application/xml application/rss+xml image/svg+xml
</IfModule>
