	{* <div n:snippet="flashes" id="flashes"> *}
	{* Flashes *}

      
      <div id="cookie-consent" class="cookie-bar" n:if="!$cookiesAccepted">
    <div class="cookie-bar-content">
        <img src="{$basePath}/uploads/img/cookies.png" alt="Cookie Icon" class="cookie-icon">
        <p>
            Používáme soubory cookie, abychom zajistili co nejlepší uživatelský zážitek. Pokračováním v používání našeho webu s tím souhlasíte.
        </p>
        <div class="cookie-bar-buttons">
            <a n:href="acceptCookies! all" class="btn-accept" >Rozumím</a>
            {* <a n:href="acceptCookies! essentials" class="btn-accept">Pouze nezbytné</a> *}
            <a href="{link moreInfo!}" class="btn-info">Více informací</a>
        </div>
    </div>
</div>
    

	{include 'footer.latte'}



	<script>window.scrollTo({ top: 0, behavior: 'smooth' });</script>

