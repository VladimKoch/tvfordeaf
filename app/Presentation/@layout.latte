<body>
	{* Header *}
	<div class="container" style="">
	{include 'header.latte'}
  <div class="" style=""><p style="color:blackgrey; font-family: font-family: Open Sans, sans-serif;" class="text-center">Skutečný hlas, skutečný dopad</p></div>
		
        {foreach $flashes as $flash}
			<div class="alert alert-info text-center">{$flash->message}</div>
		{/foreach}
